<resources xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- Base application theme. -->
    <style name="Theme.Aperture" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#76ff03</item>
        <item name="colorPrimaryVariant">#32cb00</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#76ff03</item>
        <item name="colorSecondaryVariant">#32cb00</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="textAppearanceHeadline4">@style/StartText</item>
        <item name="textAppearanceHeadline5">@style/appNameText</item>


    </style>

    <style name="StartText" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="authorNameText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="fontWeight"> 900</item>

    </style>

    <style name="authorUserNameText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">9sp</item>
    </style>

    <style name="appNameText">
        <item name="android:textSize">27sp</item>
        <item name="fontWeight"> 900</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="textPhotoDetails">
        <item name="android:textColor">#4D4D4D</item>
    </style>

    <style name="errorText">
        <item name="android:textColor">#40000000</item>
    </style>

    <style name="bottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="materialThemeOverlay">@style/BottomNavigationColors</item>


        <item name="android:itemIconDisabledAlpha">0.2</item>

    </style>

    <style name="BottomNavigationColors">
        <item name="colorPrimary">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
    </style>
</resources>